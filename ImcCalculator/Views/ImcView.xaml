<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImcCalculator.Views.ImcView"
             Title="ImcPage">

    <ScrollView>
        <VerticalStackLayout Margin="10,100,10,0" Spacing="20">

            <!--#region Height -->
            <Border StrokeThickness="2">
                <VerticalStackLayout>
                    <Label Text="Altura (cm)"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>

                    <Slider Minimum="0"
                        Maximum="250"
                        Value="{Binding ImcModel.Height}"/>


                </VerticalStackLayout>
            </Border>
            <!--#endregion-->

            <!--#region WEIGHT -->
            <Border StrokeThickness="2">
                <VerticalStackLayout>
                    <Label Text="Peso (Kg)"
                           FontSize="Large"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Slider Minimum="0"
                            Maximum="200"
                            Value="{Binding ImcModel.Weigth}"/>


                </VerticalStackLayout>
            </Border>
            <!--#endregion-->

            <!--#region RESULT -->
            <Label Text="{Binding ImcModel.State}"
                   HorizontalOptions="Center"
                   FontSize="Small"
                   />

            <Label Text="{Binding ImcModel.Result}"
                   HorizontalOptions="Center"
                   FontSize="Medium"/>
            <!--#endregion-->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>