<Window x:Class="colorMakerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:colorMakerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">


    <Window.Resources>
        <Color x:Key="Primary">#ab3527</Color>
        <Color x:Key="Secondary">#775752</Color>
        <Color x:Key="Tertiary">#705c2e</Color>
    </Window.Resources>


    <Grid x:Name="Container" Background="Black">


        <Border Margin="10,0,10,0"
                VerticalAlignment="Center" 
                Background="WhiteSmoke"
                MaxWidth="500"
                Padding="20"
                CornerRadius="20">

      

            <StackPanel>

                <Label x:Name="lblMainTitle" 
                    Content="Color Maker"
                    FontSize="42"
                    FontWeight="Bold"
                    FontFamily="PoppinsBlack"
                    HorizontalAlignment="Center" Margin="0,0,0,20">
                   
                </Label>

                <Label Content="Red value:"/>
                <Slider x:Name="sldRed"
                    ValueChanged="slider_ValueChanged"
                    />

                <Label Content="Blue value:"/>
                <Slider x:Name="sldBlue"                
                    ValueChanged="slider_ValueChanged"/>
                    
                    
                <Label Content="Green value:"/>
                <Slider x:Name="sldGreen"
                    
                    ValueChanged="slider_ValueChanged"
                    />

                <Border HorizontalAlignment="Center"
                    Padding="15"
                    Margin="0,0,0,12"
                    BorderThickness="3"
                    CornerRadius="20">
            

                    <Border.BorderBrush>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="Red" Offset="{Binding Source={x:Reference sldRed}, Path=Value}" />
                            <GradientStop Color="Green" Offset="{Binding Source={x:Reference sldGreen}, Path=Value}" />
                            <GradientStop Color="Blue" Offset="{Binding Source={x:Reference sldBlue}, Path=Value}" />
                        </LinearGradientBrush>
                    </Border.BorderBrush>

                    <StackPanel HorizontalAlignment="Center">
                        <Label Content="HEX value: " VerticalAlignment="Center"/>

                        <Label Content="#000000"
                           x:Name="lblHex"            
                           VerticalAlignment="Center"
                            FontWeight="Bold"/>
                        <Button x:Name="btnCopy"
                                   />
                    </StackPanel>
                </Border>

                <Button x:Name="btnRandom"
                    Click="btnRandom_Clicked"
                   
                    Content="Generate random color"
                    FontSize="24"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
